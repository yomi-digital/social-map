{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_GITHUB_TOKEN": "@github_token"
  },
  "build": {
    "env": {
      "VITE_GITHUB_TOKEN": "@github_token"
    }
  },
  "github": {
    "silent": true,
    "autoAlias": true
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ]
} 